            {{if .Homepage}}<a href="{{.Homepage}}" target="_blank" class="btn btn-secondary">Homepage</a>{{end}}
        </div>

        <div class="package-meta">
            {{if .Author}}<span>ğŸ‘¤ {{.Author}}</span>{{end}}
            {{if .License}}<span>ğŸ“„ {{.License}}</span>{{end}}
